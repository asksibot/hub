                <label for="kent_technologyChanges">4. Technology and Changes:</label>
                <textarea id="kent_technologyChanges" placeholder="Impact of technological advancements, significant societal changes witnessed"></textarea>
            </div>
        </div>
    </div>

    <!-- Buttons -->
    <button class="btn" onclick="generateNarrative()">Generate Narrative</button>
    <button class="btn" onclick="downloadPDF()" id="downloadBtn" style="display:none;">Download PDF</button>

    <!-- Compiled Narrative -->
    <div id="narrativeSection" style="display:none; margin-top:40px;">
        <h2>Compiled Narrative</h2>
        <div id="narrativeContent"></div>
    </div>

    <!-- jsPDF Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>

    <script>
        // Function to generate the narrative
        function generateNarrative() {
            var narrative = '';

            // Section 1: Early Years
            narrative += '<h2>Section 1: Early Years</h2>';

            // Janice's Part
            narrative += '<h3>For Janice</h3>';
            narrative += collectData('janice', [
                {id: 'birthPlace', label: 'Place of Birth'},
                {id: 'familyHeritage', label: 'Family Heritage'},
                {id: 'parents', label: 'Parents'},
                {id: 'siblings', label: 'Siblings'},
                {id: 'grandparents', label: 'Grandparents, Aunts, and Uncles'},
                {id: 'childhoodHome', label: 'Childhood Home'},
                {id: 'earlyMemories', label: 'Early Memories'},
                {id: 'familyTraditions', label: 'Family Traditions'},
                {id: 'childhoodHobbies', label: 'Hobbies and Activities'},
                {id: 'pets', label: 'Pets'}
            ]);

            // Kent's Part
            narrative += '<h3>For Kent</h3>';
            narrative += collectData('kent', [
                {id: 'birthPlace', label: 'Place of Birth'},
                {id: 'familyHeritage', label: 'Family Heritage'},
                {id: 'parents', label: 'Parents'},
                {id: 'siblings', label: 'Siblings'},
                {id: 'grandparents', label: 'Grandparents, Aunts, and Uncles'},
                {id: 'childhoodHome', label: 'Childhood Home'},
                {id: 'earlyMemories', label: 'Early Memories'},
                {id: 'familyTraditions', label: 'Family Traditions'},
                {id: 'childhoodHobbies', label: 'Hobbies and Activities'},
                {id: 'pets', label: 'Pets'}
            ]);

            // Repeat similar blocks for Sections 2 to 9

            // Display the narrative
            document.getElementById('narrativeContent').innerHTML = narrative;
            document.getElementById('narrativeSection').style.display = 'block';
            document.getElementById('downloadBtn').style.display = 'inline-block';
        }

        // Function to collect data for a person and generate HTML
        function collectData(prefix, fields) {
            var content = '';
            fields.forEach(function(field) {
                var value = document.getElementById(prefix + '_' + field.id).value;
                if (value) {
                    content += '<p><strong>' + field.label + ':</strong> ' + value + '</p>';
                }
            });
            return content;
        }

        // Function to download the narrative as PDF
        function downloadPDF() {
            var { jsPDF } = window.jspdf;

            var doc = new jsPDF('p', 'pt', 'letter');

            // Get the narrative content
            var content = document.getElementById('narrativeContent');

            // Convert HTML to PDF
            doc.html(content, {
                callback: function (doc) {
                    doc.save('Family_Narrative.pdf');
                },
                x: 20,
                y: 20,
                width: 570, // Maximum width of content on PDF
                windowWidth: 800 // Width of virtual window
            });
        }
    </script>

</body>
</html>